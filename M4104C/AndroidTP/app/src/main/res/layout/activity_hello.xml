<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HelloActivity"
    tools:showIn="@layout/hello_activity">

    <TextView
        android:id="@+id/prenom_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="[Prénom]" />

    <Button
        android:id="@+id/update_prenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Changer de prénom"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        app:layout_constraintTop_toBottomOf="@id/prenom_hello"
        android:onClick="onClickUpdatePrenom"/>

    <Button
        android:id="@+id/button_hello_anotherexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisir un autre exercice"
        android:layout_margin="60dp"
        app:layout_constraintTop_toBottomOf="@id/update_prenom"
        android:onClick="onClickBackToListeExos"/>

</android.support.constraint.ConstraintLayout>